= form_with model: @card, id: "cardCreateForm" do |f|
  %span.charge-errors
  .register-inner__content
    %h1.title カード情報を入力してください
    .form-group
      .form-group__box
        %span.registration_font カード番号
        %span.require-icon 必須
      = f.text_field :card_number, maxlength: "16", placeholder: "半角数字のみ", type: "text", id: "card-number", class: "input-default"
      = image_tag "credit-cards-top5-brand.jpg", class:"card-png"

    .form-group
      .form-group__box
        %span.registration_font 有効期限
        %span.require-icon 必須
      .expiration_date_box
        .expiration_date_box__wrap
          = f.select :exp_month, class: "payment_expiration_date_1i", name: "exp_month"
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %text.expiration_date_box__text 月

        .expiration_date_box__wrap
          =f.select :exp_year, class: "payment_expiration_date_2i", name: "exp_year"
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %text.expiration_date_box__text 年

    .form-group
      .form-group__box
        %span.registration_font セキュリティー番号
        %span.require-icon 必須
      = f.text_field :cvc, class: "input-default", maxlength: "3", name: "cvc", placeholder: "カード背面もしくは４桁もしくは３桁の番号", type: "text", id: "payment_card_cvc"
      .actions
        = f.submit "登録する", class: "submit-button", type: "submit", id: 'token_submit'