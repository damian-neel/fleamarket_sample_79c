= form_with model: @card, url: card_index_path, method: :POST, id: "cardCreateForm" do |f|
  %span.charge-errors
  .register-inner__content
    %h1.title カード情報を入力してください
    .form-group
      .form-group__box
        %span.registration_font カード番号
        %span.require-icon 必須
      = f.text_field :card_number, maxlength: "16", placeholder: "半角数字のみ", type: "text", id: "card-number", class: "input-default"
      = image_tag "credit-cards-top5-brand.jpg", class:"card-png"

    .form-group
      .form-group__box
        %span.registration_font 有効期限
        %span.require-icon 必須
      .expiration_date_box
        .expiration_date_box__wrap
          = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'payment_expiration_date_1i'
          %text.expiration_date_box__text 月
        .expiration_date_box__wrap
          = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'payment_expiration_date_2i'
          %text.expiration_date_box__text 年

    .form-group
      .form-group__box
        %span.registration_font セキュリティー番号
        %span.require-icon 必須
      = f.text_field :cvc, class: "input-default", maxlength: "3", name: "cvc", placeholder: "カード背面もしくは４桁もしくは３桁の番号", type: "text", id: "cvc"
      .actions
        = f.submit "登録する", class: "submit-button", type: "submit", id: 'token_submit'