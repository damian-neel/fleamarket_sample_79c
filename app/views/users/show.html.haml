.upper-field
  .upper-field__in
    .upper-field__in__main  
      %h1.upper-field__in__main__logo
        %a(href="/")
          = image_tag 'logo.png', alt: 'トップロゴ', height: '40.55px', width: '160px', class: ''
      .upper-field__in__main__search-box
        %input#search-btn{:type => "checkbox"}/
        %label{:for => "search-btn"}  Show search bar
        %input#search-bar{:placeholder => "検索ワードを入力してください", :type => "text"}/
  .upper-field__navigate
    .upper-field__navigate__left-side
      %ul.upper-field__navigate__left-side__item
    %ul.upper-field__navigate__right-side
      %li.upper-field__navigate__right-side__login
        - if user_signed_in?
          .upper-field__navigate__right-side__register.grid-6
            =link_to "マイページ", "/users/#{current_user.id}"
            
        - else
          .grid-6
            = link_to "新規登録", new_user_registration_path, class: "post"
      %li.upper-field__navigate__right-side__register
        - if user_signed_in?
          .upper-field__navigate__right-side__login.grid-6
            = link_to "ログアウト", destroy_user_session_path, method: :delete
        - else
          .grid-6
            = link_to "ログイン", new_user_session_path, class: "post"
.MypageField
  .flip
    .flip-inner
      .front
        .details
          %div
            Nick Name :
            = current_user.nickname
          %hr/
          .role
            Email :
            = current_user.email
          .contact
            Name :
            = current_user.family_name
            = current_user.first_name
          .contact
            Birthday :
            = current_user.birthday
      .back
        .social
          %table
            %tr
              %td
                = image_tag "big_ben.png", class:"socialicon1"
                .sociallink
                  出品履歴
              %td
                = image_tag "document_syorui_pen.png", class:"socialicon2"
                .sociallink
                  = link_to edit_user_registration_path do
                    情報修正
            %tr
              %td
                = image_tag "creditcard_gold.png", class:"socialicon3"
                .sociallink
                  = link_to new_card_path do
                    カード情報
              %td
                = image_tag "syougatsu2_omijikuji2.png", class:"socialicon4"
                .sociallink
                  %label.omikuji
                    %span 今日の運勢
                    %input{:name => "checkbox", :type => "checkbox"}/
                    #popup
                      :javascript
                        var imglist = new Array(
                        {"src":"/kichi.png","width": 100, "height": 250 },
                        {"src":"/chuukichi.png","width": 100, "height": 250 },
                        {"src":"/kyou.png","width": 100, "height": 250 },
                        {"src":"/daikichi.png","width": 100, "height": 250 },
                        {"src":"/syoukichi.png","width": 100, "height": 250 },
                        );
                        var selectnum = Math.floor(Math.random() * imglist.length);
                        var output = "<img src='" + imglist[selectnum].src + "' width='"+ imglist[ selectnum ].width+ "' height='"+ imglist[ selectnum ].height+ "'>";
                        document.write(output);
.wrapper
  =render "front/under_suzuki"